@model IEnumerable<VendasWebMvc.Models.Departamento>

@{
	ViewData["Titulo"] = "Lista de Departamentos";
}

<h1>@ViewData["Titulo"]</h1>
<hr />
<p>
	<a class="btn btn-primary" asp-action="Adicionar">Adicionar</a>
</p>
<br />
<table class="table table-striped table-hover">
	<thead>
		<tr class="table-primary">
			<th class="col-10">
				@Html.DisplayNameFor(model => model.Nome)
			</th>
			<th align="center" class="text-center">
				Ação
			</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.Nome)
				</td>
				<td align="right">
					<div class="btn-group" >
						<a class="btn btn-secondary btn-sm" asp-action="Detalhes" asp-route-id="@item.Id">
							Consultar
						</a>
						<a class="btn btn-secondary btn-sm" asp-action="Editar" asp-route-id="@item.Id">
							Editar
						</a>
						<a class="btn btn-secondary btn-sm" asp-action="Excluir" asp-route-id="@item.Id">
							Excluir
						</a>
					</div>
				</td>
			</tr>
		}
	</tbody>
</table>
