@model VendasWebMvc.Models.Departamento

@{
    ViewData["Titulo"] = "Exclusão de Departamento";
}

<h1>@ViewData["Titulo"]</h1>

<h3>Tem certeza que deseja realizar a Exclusão?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(modelo => modelo.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(modelo => modelo.Nome)
        </dd>
    </dl>
    
    <form asp-action="Excluir">
        <input type="hidden" asp-for="Id" />
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
        <input type="submit" value="Excluir" class="btn btn-danger" />
    </form>
</div>
