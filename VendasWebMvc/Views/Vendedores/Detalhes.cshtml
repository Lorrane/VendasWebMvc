@model VendasWebMvc.Models.Vendedor

@{
	ViewData["Titulo"] = "Detalhes do Vendedor";
}

<h1>@ViewData["Titulo"]</h1>

<table class="table">
	<tr>
		<th>
			@Html.DisplayNameFor(model => model.Nome)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.Email)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.DataNascimento)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.Departamento.Nome)
		</th>
	</tr>
	<tr>
		<td>
			@Html.DisplayFor(model => model.Nome)
		</td>
		<td>
			@Html.DisplayFor(model => model.Email)
		</td>
		<td>
			@Html.DisplayFor(model => model.DataNascimentoFormatada)
		</td>
		<td>
			@Html.DisplayFor(model => model.Departamento.Nome)
		</td>
	</tr>
</table>

<div>
	<a asp-action="Index" class="btn btn-secondary">Voltar</a>
	<a asp-action="Editar" asp-route-id="Model.id" class="btn btn-primary">Editar</a>
</div>