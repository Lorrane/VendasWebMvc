@model IEnumerable<VendasWebMvc.Models.Vendedor>

@{
	ViewData["Titulo"] = "Lista de Vendedores";
}

<h1>@ViewData["Titulo"]</h1>

<hr />

<a asp-action="Adicionar" class="btn btn-primary">Adicionar</a>
<br />
<br />

<table class="table table-striped table-hover">
	<thead>
		<tr class="table-primary">
			<th>
				@Html.DisplayNameFor(Model => Model.Nome)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Email)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.DataNascimento)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.SalarioBase)
			</th>
			<th align="center" class="text-center" >
				Ação
			</th>
		</tr>
	</thead>
	<tbody>
		@if (Model == null || !Model.Any())
		{
			<tr><td colspan="5" align="center">Não há dados a serem exibidos</td></tr>
		}
		else
		{
			@foreach (var item in Model)
			{
				<tr>

					<td>
						@Html.DisplayFor(modelItem => item.Nome)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Email)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.DataNascimentoFormatada)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.SalarioBase)
					</td>
					<td align="center">
						<div class="btn-group">
							<a class="btn btn-secondary btn-sm" asp-action="Detalhes" asp-route-id="@item.Id">
								Consultar
							</a>


							<a class="btn btn-secondary btn-sm" asp-action="Editar" asp-route-id="@item.Id">
								Editar
							</a>


							<a class="btn btn-secondary btn-sm" asp-action="Excluir" asp-route-id="@item.Id">
								Excluir
							</a>
						</div>
					</td>
				</tr>
			}
		}
	</tbody>
</table>
